{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/no-unknown-property": ["error", { "ignore": ["fragmentShader", "vertexShader", "uniforms", "args"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
} 